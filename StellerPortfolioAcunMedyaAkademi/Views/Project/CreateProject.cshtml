
@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Proje Ekleme Sayfası</h3>

<form class="form-group" method="post">
    <label>Proje Adı</label>
    <input type="text" name="ProjectName" class="form-control" placeholder="Lütfen boş bırakmayınız." />
    <br />
    <label>Github Link</label>
    <input type="text" name="GithubUrl" class="form-control" placeholder="Lütfen boş bırakmayınız." />
    <br />
    <label>Resim Dosya Yolu</label>
    <input type="text" name="ImageUrl" class="form-control" placeholder="Lütfen boş bırakmayınız." />
    <br />
    <label>Açıklama</label>
    <input type="text" name="Description" class="form-control" placeholder="Lütfen boş bırakmayınız." />
    <br />
    <button class="btn btn-primary">Ekle</button>
</form>

