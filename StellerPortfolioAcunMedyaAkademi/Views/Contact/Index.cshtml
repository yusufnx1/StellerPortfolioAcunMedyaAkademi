@model List<StellerPortfolioAcunMedyaAkademi.Models.TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İletişim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Lokasyon</th>
        <th>Telefon</th>
        <th>E-Posta</th>
        <th>Google Maps Urş</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.Location</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td> <a href="@item.GoogleMap" target="_blank">Haritayı Aç</a></td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Contact/CreateContact/" class="btn btn-primary">Yeni İletişim Bilgileri Ekle</a>