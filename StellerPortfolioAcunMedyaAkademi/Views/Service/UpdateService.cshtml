@model StellerPortfolioAcunMedyaAkademi.Models.TblService
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Yeni Hizmet Güncelleme Sayfası</h3>

<form class="form-group" method="post">
    @Html.HiddenFor(x=>x.ServiceID)
    <label>Hizmet Adı</label>
    @Html.TextBoxFor(x => x.ServiceName, new { @class = "form-control" })
    <br />
    <label>Hizmet İkon</label>
    @Html.TextBoxFor(x => x.IconUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelleme</button>
</form>