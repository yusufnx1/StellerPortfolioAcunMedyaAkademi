@model List<StellerPortfolioAcunMedyaAkademi.Models.TblService>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Adı</th>
        <th>İkon</th>
        <th>Statüs</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ServiceID</th>
            <td>@item.ServiceName</td>
            <td>@item.IconUrl</td>
            @if (item.ServiceStatus == true)
            {
                <th>Aktif</th>
            }
            else
            {
                <th>Pasif</th>
            }
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Service/CreateService/" class="btn btn-primary">Yeni Öne Çıkan Ekle</a>