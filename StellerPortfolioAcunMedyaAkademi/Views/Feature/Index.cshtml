@model List<StellerPortfolioAcunMedyaAkademi.Models.TblFeature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Öne Çıkanlar Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Ad Soyad</th>
        <th>Ünvan</th>
        <th>Cv Link</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.FeatureID</th>
            <td><img src="@item.ImageUrl" width="50" height="50" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Job</td>
            <td>@item.Title</td>
            <td><a href="@item.CvDownloadUrl" target="_blank">@item.CvDownloadUrl</a></td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Feature/CreateFeature/" class="btn btn-primary">Yeni Öne Çıkan Ekle</a>